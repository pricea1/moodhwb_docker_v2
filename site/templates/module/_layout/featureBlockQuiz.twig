<div id="feature-block-quiz-{{entry.title}}" class="module-block feature-block-quiz non-js-hide" data-modules="slick-carousel,feature-block-quiz">


	<div class="row">
	<div class="small-12 columns">

		<noscript>
			{{ "Javascript is required to interact with this section" | t }}
		</noscript>


		<div class="feature-block-quiz-container slick-carousel-container">	

		{% set featureBlockQuizQuestion = entry.featureBlockQuizQuestion.all() %}
		{% for matrixItem in featureBlockQuizQuestion %}
			<div class="feature-block-quiz-question-container">
				{% set itemCount = loop.length %}
				{% set currentItem = loop.index %}
				<ul class="slick-dots">
					{% for i in 1..itemCount %}<!--
					--><li class="{% if currentItem == i %}slick-active{% endif %}" aria-hidden="false"><button type="button" data-role="none">{{ i }}</button></li><!--
					-->{% endfor %}
				</ul>

				<div class="feature-block-quiz-question">{{ matrixItem.question}}</div>

				<ul class="feature-block-quiz-answer-list">
					<li class="feature-block-quiz-answer-item {% if matrixItem.correctAnswer == 'answer1' %}feature-block-quiz-answer-correct{% endif %}">
						{% set answer1Image = matrixItem.answer1Image.first() %}
						{% if answer1Image %}
							<img class="feature-block-quiz-answer-image" src="{{answer1Image.url}}" />
						{% endif %}
						<button class="feature-block-quiz-button">{{ matrixItem.answer1 }}</button>
					</li>
					<li class="feature-block-quiz-answer-item {% if matrixItem.correctAnswer == 'answer2' %}feature-block-quiz-answer-correct{% endif %}">
						{% set answer2Image = matrixItem.answer2Image.first() %}
						{% if answer2Image %}
							<img class="feature-block-quiz-answer-image" src="{{answer2Image.url}}" />
						{% endif %}
						<button class="feature-block-quiz-button">{{ matrixItem.answer2 }}</button>
					</li>
					<li class="feature-block-quiz-answer-item {% if matrixItem.correctAnswer == 'answer3' %}feature-block-quiz-answer-correct{% endif %}">
						{% set answer3Image = matrixItem.answer3Image.first() %}
						{% if answer3Image %}
							<img class="feature-block-quiz-answer-image" src="{{answer3Image.url}}" />
						{% endif %}
						<button class="feature-block-quiz-button">{{ matrixItem.answer3 }}</button>
					</li>
				</ul>
			</div>
		{% endfor %}
			<div class="feature-block-quiz-complete">{{ "Thank you, the quiz is complete"|t }}</div>
		</div>

	</div>
	</div>

</div>
