<div id="feature-block-case-study" class="module-block feature-block-case-study-container" data-modules="feature-block-case-study">

	<div class="module-block-themed ">

		<div class="row">
		{% set image = entry.image.all()|first %}
			{% if image %}
				<div class="small-4 medium-2 columns">


					<div class="feature-block-case-study-image-container">

					{% if image and image.type == "image" %}
						<img class="feature-block-case-study-image" src="{{ image.imageFile.one().getUrl('small') }}"
						>
					{% endif %}
					</div>
				</div>

				<div class="small-8 medium-10 columns">
					<quote class="feature-block-case-study-quote">{{entry.quote}}</quote>
				</div>
			{% else %}
				<div class="small-12 columns">
					<quote class="feature-block-case-study-quote">{{entry.quote}}</quote>
				</div>
			{% endif %}

		</div>

		{% if entry.contentBlockItems is defined and entry.contentBlockItems %}
		{% set contentBlockItems = entry.contentBlockItems.all() %}
		{% else %}
		{% set contentBlockItems = [] %}
		{% endif %}

			<div class="row">
			<div class="small-12 column">
			{% if contentBlockItems|length > 0 %}
				<div class="feature-block-case-study-sub-item-container">
				{% for item in contentBlockItems %}
					
						<div class="feature-block-case-study-sub-item">
							
							{% if item.imageFile and item.imageFile.one() %}
							<img class="feature-block-case-study-sub-item__image" src="{{ item.imageFile.one().getUrl('square3col') }}" alt="{{ item.imageAlt }}">
							{% endif %}
							
							{% if item.heading %}						
								<h3 class="feature-block-case-study-sub-item-subheading">{{ item.heading }}</h3>
							{% endif %}
							<div class="feature-block-case-study-sub-item-subtext-container">
								{{ item.text }}
							</div>
						</div>
				{% endfor %}
				</div>
			{% else %}
					<div class="feature-block-case-study-more-container">
						<a class="feature-block-case-study-link">{{entry.featureBlockCaseStudyLinkName}}</a>

						<div class="feature-block-case-study-text">
							<div class="content-block-sub-item feature-block-case-study-text-container two-columns">
								{{entry.body}}
							</div>
						</div>

					</div>
		{% endif %}

		</div>
		</div>
	</div>

</div>
