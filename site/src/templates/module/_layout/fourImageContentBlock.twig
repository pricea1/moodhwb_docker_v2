<div class="module-block four-image-content-block {% if entry.alternateImageBlocks == '1' %}alternate-image-content-block{% endif %}">
	<div class="row">
		<div class="small-12 columns">

			<h2 class="large-heading">{{ entry.contentBlockHeading }}</h2>
			<div class="content-block content-block-large-paragraph content-block-text-container">
				{{ entry.contentBlockText }}
			</div>

		</div>
	</div>

	<div class="row">

		<div class="small-12 column">

			<div class="content-block-sub-item-container">
				{% set contentBlockItems = entry.contentBlockItems.all() %}
				{% for item in contentBlockItems %}
					<div class="content-block-sub-item">
						
						{% if item.imageFile and item.imageFile.one() %}
						<img class="content-block-sub-item__image" src="{{ item.imageFile.one().getUrl() }}" alt="{{ item.imageAlt }}">
						{% endif %}
						
						{% if item.heading %}						
							<h3 class="content-block-subheading">{{ item.heading }}</h3>
						{% endif %}
						<div class="content-block-subtext-container">
							{{ item.text }}
						</div>
					</div>
				{% endfor %}
			</div>

		</div>

	</div>
	
	{% if entry.contentBlockText2 %}
	<div class="row">
		<div class="small-12 column">
			<div class="content-block-text-container content-block-text-container--2">
				{{ entry.contentBlockText2 | raw}}
			</div>
		</div>
	</div>
	{% endif %}

	{% include "_partials/collapsible-content" %}

</div>
